<div class="w-50 p-3" style="background-color: #fafafa;" >

<%= form_for(resource, as: resource_name, 
                      url: session_path(resource_name) ) do |f| %>
        
  <h3 class="h3 mb-3 font-weight-normal">Please sign in</h3>

    <%= f.label :email, placeholder: "Email address" %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>


    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", required: true,
                                           class: "form-control" %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me %> Remember Me
      </label>
    </div>
  <% end -%>
  <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
<%= render "devise/shared/links" %>
</div>