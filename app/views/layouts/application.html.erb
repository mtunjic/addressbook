<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for?(:title) %>
      <%= yield(:title) %>
      <% else %>
        Address Book
      <% end %>
    </title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <%= render 'layouts/header' %>
    
    <div class="container">
      <div class="row">

        <!-- left menu side -->
        <div class="col-2">
          <div class="left-menu">
            <%= yield :left_menu %>
            <%= render "contact_index",  cached: true %>
          </div>
        </div>
      
        <!-- main content -->
        <div class="col-8">
           <main role="main" class="pb-3">

            <% if notice.present? %>
              <aside class="alert alert-info">
                <%= notice %>
              </aside>
            <% end %>
            <% if alert.present? %>
              <aside class="alert alert-danger">
                <%= alert %>
              </aside>
            <% end %>
            <%= yield %>
            </main>
        </div>

        <!-- right actions side -->
        <div class="col">
           <div class="sidebar">
            <%= yield :sidebar %>
            <div class="actions">
                <%= yield :actions %>
            </div>
          
          </div>
        </div>
         <!-- end action side -->

      </div> 
    </div>

    <%= render 'layouts/footer' %>

  </body>
</html>
